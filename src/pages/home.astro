<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home - Artistry</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-900 text-gray-100 min-h-screen">
    <nav
      class="bg-gray-800 bg-opacity-50 backdrop-filter backdrop-blur-lg fixed w-full z-10"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex justify-between items-center">
          <a
            href="/home"
            class="text-2xl font-bold text-white hover:text-gray-200 transition"
            >Artistry</a
          >
          <div class="flex items-center space-x-4">
            <a href="/profile" class="text-gray-300 hover:text-white transition"
              >Profile</a
            >
            <a
              href="/create-post"
              class="text-gray-300 hover:text-white transition">Create Post</a
            >
            <form method="POST">
              <button
                type="submit"
                class="text-gray-300 hover:text-white transition"
                >Sign Out</button
              >
            </form>
          </div>
        </div>
      </div>
    </nav>

    <main class="pt-24 pb-12">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-bold mb-8">
          Welcome, {user.user_metadata.name}!
        </h1>

        <h2 class="text-2xl font-bold mb-4">Latest Posts</h2>

        {
          posts &&
            posts.map((post) => (
              <article class="bg-gray-800 rounded-lg shadow-xl overflow-hidden mb-8">
                <div class="p-6">
                  <h3 class="text-xl font-bold mb-2">{post.title}</h3>
                  <p class="text-gray-400 mb-4">
                    Posted on {new Date(post.created_at).toLocaleDateString()}
                  </p>
                  <p class="text-gray-300">
                    {post.content.substring(0, 200)}...
                  </p>
                  <a
                    href={`/post/${post.id}`}
                    class="mt-4 inline-block text-indigo-400 hover:text-indigo-300"
                  >
                    Read more
                  </a>
                </div>
              </article>
            ))
        }

        {
          !posts ||
            (posts.length === 0 && (
              <p class="text-center text-gray-400">No posts found.</p>
            ))
        }
      </div>
    </main>

    <footer class="bg-gray-800 py-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <p class="text-center text-gray-400">
          &copy; 2025 Artistry. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>
